    "@content-collections/next": "^0.2.6",
    "@fuma-comment/react": "^1.2.4",
    "@fuma-comment/server": "^1.2.4",
    "@fumadocs/content-collections": "1.2.0",
    "@fumadocs/mdx-remote": "^1.3.2",
    "@uploadthing/react": "^7.3.0",
    "better-auth": "^1.2.8",
    "zod": "^3.25.42",
    "drizzle-orm": "0.44.1",
    "fumadocs-core": "15.5.0",
    "fumadocs-ui": "15.5.0",
    "hono": "4.7.10",
    "lucide-react": "0.511.0",
    "next": "15.3.3",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.8",
    "feed": "^5.1.0",
    "uploadthing": "^7.7.2",
    "@next/third-parties": "15.3.3"
  },
  "devDependencies": {
