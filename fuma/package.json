{
  "name": "fuma",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:pre": "esbuild --bundle --outfile=dist/prebuild.js --platform=node ./scripts/pre-build.ts && node dist/prebuild.js",
    "build:post": "esbuild --bundle --outfile=dist/postbuild.js --platform=node ./scripts/post-build.ts && node dist/postbuild.js",
    "build": "pnpm build:pre && next build && pnpm build:post",
    "dev": "next dev --turbo",
    "start": "next start",
    "db:gen": "pnpm drizzle-kit generate",
    "db:mi": "pnpm drizzle-kit migrate"
  },

  "dependencies": {
